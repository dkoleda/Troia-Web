server {
    listen   80;
	server_name troia troia.ipeirotis.com;

    access_log  %(project_root)s/static/logs/nginx/%(project_name)s.access.log;
    error_log   %(project_root)s/static/logs/nginx/%(project_name)s.error.log;

	root %(project_root)s/static;
	index index.html index.htm;

	#rewrite ^/s/(.*)$ /media/$1 last;

    location /media  {
        gzip on;
        root %(project_root)s/static;
        autoindex  off;
        expires 60d;
    }

    location /apidocs {
        root %(project_root)s;
        autoindex  off;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }

    location = /robots.txt {
        root %(project_root)s;
    }


    error_page  404  /404.html;
}

